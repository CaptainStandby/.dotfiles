#!/bin/zsh

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias ls='ls --color=auto'
alias ll='ls -alFh'
alias la='ls -A'
alias l='ls -CF'
alias 'cd..'='cd ..'

start-ssh-agent() {
	eval "$(ssh-agent)"
	ssh-add
}
alias stop-ssh-agent='ssh-agent -k'

